{
  "name": "@design-port/browser-bridge",
  "version": "0.1.0",
  "description": "Browser communication layer and WebSocket server for DesignPort",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "ws": "^8.16.0",
    "puppeteer-core": "^22.0.0"
  },
  "devDependencies": {
    "@types/ws": "^8.5.10",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0"
  },
  "files": ["dist"],
  "license": "MIT"
}
